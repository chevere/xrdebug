{
    "api": "xr",
    "name": "XR Debug API",
    "version": "1.0.0",
    "servers": [
        {
            "url": "http:\/\/0.0.0.0:27420",
            "description": "XR Debug Server"
        }
    ],
    "paths": {
        "\/": {
            "name": "\/",
            "regex": "\/",
            "endpoints": {
                "GET": {
                    "description": "Single page application",
                    "responses": {
                        "200": [
                            {
                                "context": "SPAController",
                                "body": {
                                    "type": "string",
                                    "regex": "^.*$\/m"
                                }
                            }
                        ]
                    }
                }
            }
        },
        "\/dump": {
            "name": "\/dump",
            "regex": "\/dump",
            "endpoints": {
                "GET": {
                    "description": "Debug stream",
                    "responses": {
                        "200": [
                            {
                                "context": "DebugStreamController",
                                "body": {
                                    "type": "className",
                                    "className": "React\\Stream\\ThroughStream"
                                }
                            }
                        ]
                    }
                }
            }
        },
        "\/locks": {
            "name": "\/locks",
            "regex": "\/locks",
            "endpoints": {
                "POST": {
                    "description": "Create a lock",
                    "body": {
                        "type": "array#map",
                        "parameters": {
                            "id": {
                                "type": "string",
                                "regex": "^[0-9a-fA-F]{8}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{12}$"
                            }
                        }
                    },
                    "responses": {
                        "201": [
                            {
                                "context": "LockPostController",
                                "body": {
                                    "type": "array#map",
                                    "parameters": {
                                        "lock": {
                                            "type": "boolean"
                                        },
                                        "stop": {
                                            "type": "boolean"
                                        }
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        "\/locks\/{id}": {
            "name": "\/locks\/{id}",
            "regex": "^(?|\/locks\/([0-9a-fA-F]{8}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{12}))$",
            "variables": {
                "id": {
                    "type": "string",
                    "regex": "^[0-9a-fA-F]{8}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{4}\\b-[0-9a-fA-F]{12}$"
                }
            },
            "endpoints": {
                "DELETE": {
                    "description": "Delete a lock",
                    "responses": {
                        "204": [
                            {
                                "context": "LockDeleteController"
                            }
                        ],
                        "404": [
                            {
                                "context": "LockDeleteController"
                            }
                        ]
                    }
                },
                "GET": {
                    "description": "Get a lock",
                    "responses": {
                        "200": [
                            {
                                "context": "LockGetController",
                                "body": {
                                    "type": "array#map",
                                    "parameters": {
                                        "lock": {
                                            "type": "boolean"
                                        },
                                        "stop": {
                                            "type": "boolean"
                                        }
                                    }
                                }
                            }
                        ],
                        "404": [
                            {
                                "context": "LockGetController"
                            }
                        ]
                    }
                },
                "PATCH": {
                    "description": "Update a lock",
                    "responses": {
                        "200": [
                            {
                                "context": "LockPatchController",
                                "body": {
                                    "type": "array#map",
                                    "parameters": {
                                        "lock": {
                                            "type": "boolean"
                                        },
                                        "stop": {
                                            "type": "boolean"
                                        }
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        "\/message": {
            "name": "\/message",
            "regex": "\/message",
            "endpoints": {
                "POST": {
                    "description": "Send a debug message",
                    "body": {
                        "type": "array#map",
                        "parameters": {
                            "body": {
                                "required": false,
                                "type": "string",
                                "regex": ".*?"
                            },
                            "emote": {
                                "required": false,
                                "type": "string"
                            },
                            "file_line": {
                                "required": false,
                                "type": "string"
                            },
                            "file_path": {
                                "required": false,
                                "type": "string"
                            },
                            "id": {
                                "required": false,
                                "type": "string"
                            },
                            "topic": {
                                "required": false,
                                "type": "string"
                            }
                        }
                    },
                    "responses": {
                        "200": [
                            {
                                "context": "MessagePostController",
                                "body": {
                                    "type": "null"
                                }
                            }
                        ]
                    }
                }
            }
        }
    }
}